<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.circularreveal.CircularRevealRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".movingbanner">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/bg3" />

    <TextView
        android:id="@+id/tvscroll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="543dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:fontFamily="@font/annie_use_your_telescope"
        android:freezesText="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="Hey players!!!!,Tic-Tac-Toe, Noughts and Crosses, or Xs and Os "
        android:textColor="#9C0202"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="442dp"
        android:fontFamily="@font/annie_use_your_telescope"
        android:text="How to play?"
        android:textColor="#F4EFEF"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="243dp"
        android:fontFamily="@font/annie_use_your_telescope"
        android:text="this is a game for two players, X and O, who take turns marking the spaces in a 3Ã—3 grid. The player who succeeds in placing three of their marks in a diagonal, horizontal, or vertical row is the winner"
        android:textColor="#F4EFEF"
        android:textSize="24sp"
        android:paddingLeft="10sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/mstop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="95dp"
        android:onClick="mstop"
        android:text="marq_stp"
        android:textColor="#F4F1F1" />

    <Button
        android:id="@+id/mstart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="95dp"
        android:onClick="mstrt"
        android:text="marq_strt"
        android:textColor="#F4F3F3" />

    <Button
        android:id="@+id/Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="13dp"
        android:onClick="bhome"
        android:text="Back to Game"
        android:textColor="#FDFCFC"
        android:textSize="16sp" />


</com.google.android.material.circularreveal.CircularRevealRelativeLayout>