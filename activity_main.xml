<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bg2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg2"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg10"
        tools:visibility="visible" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridlayout1"
        android:layout_width="380dp"
        android:layout_height="380dp"
        android:background="@drawable/board"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.636">

        <ImageView
            android:id="@+id/iv00"
            android:layout_width="99dp"
            android:layout_height="105dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:alpha="0"
            android:onClick="click"
            android:tag="0"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/ogmark" />

        <ImageView
            android:id="@+id/iv01"
            android:layout_width="99dp"
            android:layout_height="105dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:alpha="0"
            android:onClick="click"
            android:tag="1"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/ogmark" />

        <ImageView
            android:id="@+id/iv02"
            android:layout_width="99dp"
            android:layout_height="105dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:alpha="0"
            android:onClick="click"
            android:tag="2"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/ogmark" />

        <ImageView
            android:id="@+id/iv10"
            android:layout_width="99dp"
            android:layout_height="105dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:alpha="0"
            android:onClick="click"
            android:tag="3"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/ogmark" />

        <ImageView
            android:id="@+id/iv11"
            android:layout_width="99dp"
            android:layout_height="105dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:alpha="0"
            android:onClick="click"
            android:tag="4"
            app:layout_column="1"
            app:layout_row="1"
            app:srcCompat="@drawable/ogmark" />

        <ImageView
            android:id="@+id/iv12"
            android:layout_width="99dp"
            android:layout_height="105dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:alpha="0"
            android:onClick="click"
            android:tag="5"
            app:layout_column="2"
            app:layout_row="1"
            app:srcCompat="@drawable/ogmark" />

        <ImageView
            android:id="@+id/iv20"
            android:layout_width="99dp"
            android:layout_height="105dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:alpha="0"
            android:onClick="click"
            android:tag="6"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/ogmark" />

        <ImageView
            android:id="@+id/iv21"
            android:layout_width="99dp"
            android:layout_height="105dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:alpha="0"
            android:onClick="click"
            android:tag="7"
            app:layout_column="1"
            app:layout_row="2"
            app:srcCompat="@drawable/ogmark" />

        <ImageView
            android:id="@+id/iv22"
            android:layout_width="99dp"
            android:layout_height="105dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:alpha="0"
            android:onClick="click"
            android:tag="8"
            app:layout_column="2"
            app:layout_row="2"
            app:srcCompat="@drawable/ogmark" />
    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/tvresult"
        android:layout_width="358dp"
        android:layout_height="56dp"
        android:fontFamily="@font/annie_use_your_telescope"
        android:text="TextView"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FBF9F9"
        android:textSize="34sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.124" />

    <Button
        android:id="@+id/btnpa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="pa"
        android:text="Play_again"
        android:textColor="#F8F5F5"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.865"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.971" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="84dp"
        android:layout_height="29dp"
        android:textColor="#F8F6F6"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnpa"
        app:layout_constraintHorizontal_bias="0.208"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridlayout1"
        app:layout_constraintVertical_bias="0.539" />

    <Button
        android:id="@+id/btn_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:onClick="opentask"
        android:text="asyn_task/about?"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/tvresult"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.944"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>